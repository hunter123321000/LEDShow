<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    tools:context="${relativePackage}.${activityClass}" >

    <AbsoluteLayout
        android:id="@+id/rl_btn"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <ImageView
            android:id="@+id/btn_msg1"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/margin_TBLR_10"
            android:scaleType="matrix"
            android:src="@drawable/r1"
            android:text="前進"
            android:textColor="@drawable/selector_btn_txt"
            android:textSize="@dimen/txt_size_28"
            android:textStyle="bold"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/btn_msg2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignRight="@id/btn_msg1"
            android:layout_below="@id/btn_msg1"
            android:scaleType="matrix"
            android:src="@drawable/r2"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/btn_msg3"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/margin_TBLR_10"
            android:layout_toRightOf="@id/btn_msg1"
            android:scaleType="matrix"
            android:src="@drawable/r3"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/btn_msg4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/btn_msg3"
            android:layout_margin="@dimen/margin_TBLR_10"
            android:layout_toRightOf="@id/btn_msg2"
            android:scaleType="matrix"
            android:src="@drawable/bike"
            android:visibility="gone" />
    </AbsoluteLayout>

    <com.hunter123321000.ledshow.MarqueeTextView
        android:id="@+id/mtv_msg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/rl_btn"
        android:background="#000000"
        android:ellipsize="marquee"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="STOP"
        android:textColor="#FF0000"
        android:textSize="60dp"
        android:visibility="gone" >
    </com.hunter123321000.ledshow.MarqueeTextView>

    <com.hunter123321000.ledshow.AutoResizeTextView
        android:id="@+id/tv_msg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/rl_btn"
        android:layout_alignParentBottom="true"
        android:background="@color/light_green"
        android:gravity="center_horizontal"
        android:maxLines="1"
        android:text="@string/turn_left"
        android:textColor="@color/black"
        android:textSize="60sp"
        android:textStyle="bold"
        android:visibility="gone" >
    </com.hunter123321000.ledshow.AutoResizeTextView>

    <ImageButton
        android:id="@+id/img"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/tv_msg"
        android:scaleType="matrix"
        android:src="@drawable/bike"
        android:visibility="gone" />

</RelativeLayout>